  },
  "components": {
    "schemas": {
      "Author": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "author_name": { "type": "string" },
          "bio": { "type": "string" },
          "created_at": { "type": "string | Date" }

        },
        "required": ["author_name"]
      },
      "Book": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "publisher_id": { "type": "string" },
          "author_id": { "type": "string" },
          "created_at": { "type": "string | Date" }
        },
        "required": ["title", "author_id", "publisher_id"]
      },
      "Publisher": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "publisher_name": { "type": "string" },
          "address": { "type": "string" },
          "created_at": { "type": "string | Date" }
        },
        "required": ["publisher_name"]
      }
    }
  }
}
